{
  "name": "laravel-vscode-git",
  "displayName": "Laravel VS Code Git Extension",
  "description": "A VS Code extension that integrates Laravel 12 with Git features",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/laravel/vscode.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-laravel-git.status",
        "title": "Laravel Git: Show Status"
      },
      {
        "command": "vscode-laravel-git.commit",
        "title": "Laravel Git: Commit Changes"
      },
      {
        "command": "vscode-laravel-git.push",
        "title": "Laravel Git: Push Changes"
      },
      {
        "command": "vscode-laravel-git.pull",
        "title": "Laravel Git: Pull Changes"
      },
      {
        "command": "vscode-laravel-git.log",
        "title": "Laravel Git: Show Log"
      },
      {
        "command": "vscode-laravel-git.branch",
        "title": "Laravel Git: Show Branches"
      },
      {
        "command": "vscode-laravel-git.checkout",
        "title": "Laravel Git: Checkout Branch"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "laravel-git",
          "title": "Laravel Git",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "laravel-git": [
        {
          "id": "laravel-git-explorer",
          "name": "Git Explorer",
          "when": "config.vscode-laravel-git.enable"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Laravel Git",
      "properties": {
        "vscode-laravel-git.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Laravel Git extension"
        },
        "vscode-laravel-git.gitPath": {
          "type": "string",
          "default": "",
          "description": "Path to Git executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "ts-loader": "^9.4.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.2.1"
  }
}